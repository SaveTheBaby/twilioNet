description "mailcatcher"
author  "Hiroshi KAWAI <kawai@primalbase.jp>"

start on runlevel [2345]
stop on runlevel [!2345]
respawn

pre-start script

bash << "EOF"
  mkdir -p /var/log/mailcatcher
  chown -R vagrant /var/log/mailcatcher
EOF

end script

exec su - vagrant -c '/usr/local/rvm/bin/mailcatcher --http-ip=0.0.0.0 -f &>>/var/log/mailcatcher/mailcatcher.log'